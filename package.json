{
  "name": "react-19",
  "scripts": {
    "build:client": "webpack --config webpack.client.config.js",
    "build:server": "webpack --config webpack.server.config.js",
    "build": "npm run build:client && npm run build:server",
    "dev:client": "webpack --config webpack.client.config.js --watch",
    "dev:server": "webpack --config webpack.server.config.js --watch",
    "dev:start": "nodemon dist/server.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:start\"",
    "lint": "eslint './src/**/*.{js,ts,tsx}' --quiet",
    "test": "playwright test -c playwright-ct.config.ts"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
